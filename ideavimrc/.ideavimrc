let mapleader = " "
set incsearch
set ignorecase
set smartcase
set scrolloff=8

" Plugins
set easymotion

nmap gy "+y
nmap gp "+p
vmap gy "+y
vmap gp "+p

imap <A-h> <Left>
imap <A-j> <Down>
imap <A-k> <Up>
imap <A-l> <Right>

" Alt-based code movement
nmap <A-j> <Action>(MoveLineDown)
nmap <A-k> <Action>(MoveLineUp)
nmap <A-h> <Action>(MoveStatementLeft)
nmap <A-l> <Action>(MoveStatementRight)
vmap <A-j> <Action>(MoveLineDown)
vmap <A-k> <Action>(MoveLineUp)
vmap <A-h> <Action>(MoveStatementLeft)
vmap <A-l> <Action>(MoveStatementRight)

" Format code
nmap <leader><leader>f <Action>(ReformatCode)

" Telescope
nmap <leader>sf <Action>(GotoFile)
nmap <leader>sg <Action>(FindInPath)
nmap <leader>sr <Action>(RecentFiles)
nmap <leader>/ <Action>(Find)

" Open Project View
nmap <leader>e <Action>(ActivateProjectToolWindow)

" Lsp
nmap <leader>rn <Action>(RenameElement)
nmap <leader>ca <Action>(ShowIntentionActions)
nmap gd <Action>(GotoDeclaration)
nmap gkd <Action>(QuickImplementations)
nmap gr <Action>(FindUsages)
nmap ]d <Action>(GotoNextError)
nmap [d <Action>(GotoPreviousError)
nmap <leader>ws <Action>(GotoSymbol)

" Tab
nmap <C-[> <Action>(PreviousTab)
nmap <C-]> <Action>(NextTab)
nmap <leader>bd <Action>(CloseContent)
nmap <leader>bo <Action>(CloseAllEditorsButActive)
nmap <C-Space><C-Space> <C-^>

map ss <Plug>(easymotion-s)


